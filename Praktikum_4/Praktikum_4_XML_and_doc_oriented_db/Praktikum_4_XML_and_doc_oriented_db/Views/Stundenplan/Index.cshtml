@using Praktikum_4_XML_and_doc_oriented_db.Models
@model Stundenplan
@{
    ViewBag.Title = "Stundenplan";
}

<h2>@ViewBag.Title</h2>

<table>
    <tr>
        <th colspan="5">Stundenplan</th>
    </tr>
    @foreach(var tag in Model.Tage)
    {
        <tr><td rowspan="@(tag.Blöcke.Count+1)">@tag.Name</td></tr>
        foreach(var block in tag.Blöcke)
        {
            <tr>
                <td>@block.Zeit</td>
                <td><a href="~/Foren?id=@block.ForumID">@block.Veranstaltung</a></td>
                <td>@block.Typ</td>
                <td><a href="~/Module/ProfSummary/@block.Verantwortlicher">@block.Verantwortlicher</a></td>
            </tr>
        }
    }
</table>
